%nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
  %a.navbar-brand{"href" => root_path}
    = image_tag "logo.png", size: "30x30", alt: t('layouts.site_title'), class: "d-inline-block align-top"
    ALTopedia
  %button.navbar-toggler{"type" => "button", "data-toggle" => "collapse", "data-target" => "#navbarSupportedContent",
                          "aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle Navigation" }
    %span.navbar-toggler-icon
  .collapse.navbar-collapse#navbarSupportedContent
    %ul.navbar-nav
      - if user_signed_in?
        %li.nav-item.active
          = link_to  current_user.username, current_user, class: "nav-link"
        - if current_user.admin? || current_user.moderator?
          %li.nav-item.active= link_to "Mod queue", modqueue_path, class: "nav-link"
      - else
        %li.nav-item.active
          = link_to t('layouts.log_in'), new_user_session_path, class: "nav-link"
        %li.nav-item.active
          = link_to t('layouts.register-new-account'), new_user_registration_path, class: "nav-link"
      %li.nav-item.active
        = link_to t('layouts.contribute'), contribute_path, class: "nav-link"
      %li.nav-item.active
        = link_to "Guide", guide_path, class: "nav-link"
      %li.nav-item.active
        = link_to "Tag Search", search_path, class: "nav-link"
      - if user_signed_in?
        %li.nav-item.active
          = link_to t('layouts.log_out'), destroy_user_session_path, method: :delete, class: "nav-link"
    %ul.navbar-nav.ml-auto
      = form_tag(activity_search_path, method: :get, class: "form-inline mr-2") do
        = text_field_tag :search
        = submit_tag "Search", class: "btn btn-primary"
      -# - if I18n.locale == :ja
      -#   %li.nav-item= link_to "English", "https://en.altopedia.net", class: "nav-link"
      -# - elsif I18n.locale == :en
      -#   %li.nav-item= link_to "日本語", "https://ja.altopedia.net", class: "nav-link"
.nav-scroller.bg-white.box-shadow
  %nav.nav.nav-underline
