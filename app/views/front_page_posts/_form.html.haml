= form_with model: @front_page_post, class: "general-form" do |f|
  = render 'shared/error_messages', object: f.object
  = f.label :title, "Title", class: "form-label"
  = f.text_field :title, class: "form-textfield", maxlength: 80
  = f.label :excerpt, "Excerpt (displayed on front page but not in the post)", class: "form-label"
  = f.text_area :excerpt, class: "form-textarea", rows: 3, maxlength: 1000
  = f.label :content, "Content of the post", class: "form-label"
  = f.text_area :content, class: "form-textarea", rows: 8, maxlength: 15000
  = f.submit "Submit", class: "submit-button"
