= form_for(@activity) do |f|
  = render 'shared/error_messages', object: f.object
  .accordion.mb-2#activity-guidelines
    .card
      .card-header#guidelines-heading
        %button.btn.btn-link{"data-toggle" => "collapse", "data-target" => "#guidelines-text", "type" => "button",
                             "aria-expanded" => "true", "aria-controls" => "guidelines-text"}
          %h5.mb-0 Activity guidelines
      #guidelines-text.collapse.show{"aria-labelledby" => "#guidelines-heading", "data-parent" => "#activity-guidelines"}
        .card-body
          %p Please describe your activity clearly so other people can perform it!
          %p Please don't submit an activity that's copyrighted or contains materials that you can't post for public consumption.
          %p Make sure that your submission is appropriate for a general audience and children in particular.
          %p 
            You can use Markdown formatting in your directions, but you can't include links or images. This is to help cut down on spam and other shenanigans.
            %span= link_to "(Markdown guide)", "http://commonmark.org/help/"
          %p Advertising or soliciting isn't allowed.
  .form-group
    %label{"for" => "activity_name"}= t('activities.form.activity_title')
    = f.text_field :name, class: 'form-control'
  .form-group
    %label{"for" => "activity_short_description"}= t('activities.form.short_description')
    = f.text_area :short_description, class: 'form-control'
  .form-group
    %label{"for" => "activity_long_description"}= t('activities.form.long_description')
    %p You can use #{link_to "Markdown formatting", "http://commonmark.org/help/"} in the directions.
    = f.text_area :long_description, class: 'form-control', rows: 8
  .form-group
    %label{"for" => "activity_time_estimate"}= t('activities.form.time_estimate')
    = f.text_field :time_estimate, class: 'form-control'
  .tag-chooser
    %h4= t('activities.form.tag_heading')
    %p= t('activities.form.tag_directions_1')
    %p= t('activities.form.tag_directions_2')
    %p 
    - @tag_categories.each do |category|
      .tag-block.col-md-4
      %h5= category.name
      %ul
        = f.collection_check_boxes :tag_ids, category.tags, :id, :name_for_lists do |tag_item|
          %li #{tag_item.check_box class: "form-check-input"} #{markdown(tag_item.label class: "form-check-label")}
    %h3= t('activities.form.file-heading')
    %p= (t'activities.form.file-attach-text')
    = f.file_field :documents, multiple: true, direct_upload: true, class: "form-control-file"
    %br
    = f.submit t('submit'), class:"btn btn-primary"
