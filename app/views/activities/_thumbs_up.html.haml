#thumbs-up-voter
  - if user_signed_in?
    - unless Upvote.find_by(activity_id: @activity.id, user_id: current_user.id)
      = render "create_thumbs_up"
    - else
      = render "delete_thumbs_up"
  - else
    %small= link_to t('activities.thumbs-up.thumbs-up-logged-out'), new_user_session_path 

