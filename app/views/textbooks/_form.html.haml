= form_with model: @textbook, class: "general-form" do |f|
  = render 'shared/error_messages', object: f.object
  = f.label :name, "Name", class: "form-label"
  = f.text_field :name, class: "form-textfield"

  = f.label :additional_info, class: "form-label"
  = f.text_field :additional_info, class: "form-textfield"

  = f.label :year_published, "Publication year (optional)", class: "form-label"
  = f.number_field :year_published, in: 1999..2025, step: 1, class: "form-textfield"

  = f.label :level, "Textbook level", class: "form-label"
  = f.select :level, Textbook.levels.map { |key, value| [key, key] }, {}, class: "form-select"

  = f.submit "Submit", class: "submit-button"

