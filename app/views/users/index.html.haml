- provide(:title, "ALTopedia - User list")

%h4 Users (newest first)
      
.row.mb-2
  - @all_users.each do |user|
    .card.col-sm-8.col-md-6.col-lg-3
      .card-body
        %span.font-weight-bold= link_to "#{user.username} (#{user.activity_count})", user
        %small= user.created_at.strftime("%B %d")
= paginate @all_users

%h4= t('.moderators')
.row.mb-2
  - @moderators.each do |user|
    .card.col-sm-8.col-md-6.col-lg-3
      .card-body
        %span.font-weight-bold= link_to "#{user.username}", user

%h4 Administrators
.row.mb-2
  - @admins.each do |user|
    .card.col-sm-8.col-md-6.col-lg-3
      .card-body
        %span.font-weight-bold= link_to "#{user.username}", user
